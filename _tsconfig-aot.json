{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    // "baseUrl": ".",
    // "rootDir": ".",
    "outDir": "./dist/aot",
    "noEmit": false,
    "noEmitHelpers": false,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "removeComments": false,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/aot",
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "skipMetadataEmit" : false
  }
}
