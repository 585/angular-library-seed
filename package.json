{
  "name": "angular-library-starter",
  "version": "0.0.1",
  "description": "Angular library starter",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "angular2",
    "angular4",
    "angular",
    "library",
    "starter",
    "ng"
  ],
  "author": {
    "name": "Oleksii Trekhleb",
    "url": "https://www.linkedin.com/in/trekhleb/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trekhleb/angular-library-starter.git"
  },
  "bugs": {
    "url": "https://github.com/trekhleb/angular-library-starter/issues"
  },
  "homepage": "https://github.com/trekhleb/angular-library-starter#readme",
  "scripts": {
    "build": "npm run build:esm && npm run build:umd",
    "build:esm": "npm run inline-templates && node_modules/.bin/ngc -p tsconfig-aot.json",
    "build:umd": "webpack --config webpack-dev.config.ts",
    "ci:travis": "npm run lint && npm run test",
    "docs": "compodoc -p tsconfig.json",
    "explorer": "source-map-explorer ./dist/index.umd.js ./dist/index.umd.js.map",
    "inline-templates": "gulp inline-templates",
    "lint": "npm run tslint 'src/**/*.ts'",
    "postbuild": "rimraf tmp",
    "prebuild": "rimraf dist",
    "test": "karma start",
    "test:watch": "karma start --auto-watch --no-single-run",
    "tslint": "tslint"
  },
  "peerDependencies": {
    "@angular/common": "^4.0.0 || ^2.0.0",
    "@angular/core": "^4.0.0 || ^2.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@types/jasmine": "^2.5.47",
    "@types/karma": "^0.13.35",
    "@types/node": "^7.0.18",
    "@types/webpack": "^2.2.15",
    "@types/webpack-env": "^1.13.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "codelyzer": "^3.0.1",
    "compodoc": "^0.0.41",
    "css-loader": "^0.28.1",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.0.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.6.1",
    "json-loader": "^0.5.4",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "node-sass": "^4.5.2",
    "raw-loader": "^0.5.1",
    "rimraf": "2.6.1",
    "rxjs": "^5.3.1",
    "sass-loader": "^6.0.5",
    "source-map-explorer": "^1.3.3",
    "to-string-loader": "^1.1.5",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-angular-externals": "^1.0.2",
    "webpack-rxjs-externals": "^1.0.0",
    "zone.js": "^0.8.10"
  }
}
