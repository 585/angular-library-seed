{
  "name": "ng-library-starter",
  "description": "Angular2+ library starter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trekhleb/ng-library-starter.git"
  },
  "scripts": {
    "build": "npm run inline-templates && npm run build:esm && npm run build:umd",
    "build:esm": "node_modules/.bin/ngc -p tsconfig-aot.json",
    "build:umd": "rollup -c rollup.config.js",
    "ci:travis": "npm run lint",
    "docs": "compodoc -p tsconfig.json",
    "explorer": "source-map-explorer ./dist/index.umd.js ./dist/index.umd.js.map",
    "inline-templates": "gulp inline-templates",
    "lint": "npm run tslint 'src/**/*.ts'",
    "postbuild": "rimraf tmp",
    "prebuild": "rimraf dist",
    "tslint": "tslint"
  },
  "peerDependencies": {
    "@angular/common": "^4.0.0 || ^2.0.0",
    "@angular/core": "^4.0.0 || ^2.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "codelyzer": "^3.0.1",
    "compodoc": "^0.0.41",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.0.0",
    "node-sass": "^4.5.2",
    "rimraf": "2.6.1",
    "rollup": "0.41.6",
    "rxjs": "^5.3.1",
    "source-map-explorer": "^1.3.3",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "zone.js": "^0.8.10"
  }
}
