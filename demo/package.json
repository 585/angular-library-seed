{
  "name": "ng-library-starter-demo",
  "description": "Demo application for Angular2+ library starter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trekhleb/ng-library-starter.git"
  },
  "scripts": {
    "build": "npm run build:aot && npm run build:jit && npm run build:umd",
    "build:aot": "npm run build:aot:compile && npm run build:aot:bundle",
    "build:aot:bundle": "webpack --config esm/webpack-aot.config.js --bail",
    "build:aot:compile": "node_modules/.bin/ngc -p esm/tsconfig-aot.json",
    "build:jit": "webpack --config esm/webpack.config.js --bail",
    "build:umd": "rimraf umd/lib && copyfiles -u 2 '../dist/index.umd.js' '../dist/index.umd.js.map' umd/lib",
    "clean:esm:aot": "rimraf lib esm/dist/aot esm/node_modules esm/src/app/*.ngfactory.ts esm/src/app/*.ngsummary.json",
    "clean:esm:jit": "rimraf lib esm/dist/jit",
    "copy-lib": "copyfiles --up 2 '../dist/**/*' esm/lib",
    "prebuild:aot": "npm run clean:esm:aot && npm run copy-lib",
    "prebuild:jit": "npm run clean:esm:jit && npm run copy-lib"
  },
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "awesome-typescript-loader": "3.1.2",
    "copyfiles": "^1.2.0",
    "core-js": "^2.4.1",
    "html-webpack-plugin": "^2.8.1",
    "rimraf": "2.6.1",
    "rxjs": "^5.2.0",
    "typescript": "~2.2.0",
    "webpack": "2.3.3",
    "zone.js": "^0.8.4"
  }
}
